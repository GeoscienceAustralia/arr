                                    <m:mrow>
                                        <m:mi>θ, M)</m:mi>
                                        
                                        <m:mrow>
                                            <m:mi>p(θ | D, M )</m:mi>
                                            
                                            <m:mrow>
                                                <m:mi>dθ</m:mi>
                                            </m:mrow>
                                        </m:mrow>
                                    </m:mrow>
